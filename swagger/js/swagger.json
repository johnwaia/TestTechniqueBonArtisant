{
  "openapi": "3.0.3",
  "info": {
    "title": "API Gestion Produits",
    "version": "1.0.0",
    "description": "API d’authentification et de gestion de produits (JWT + MongoDB)."
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Serveur local"
    }
  ],
  "tags": [
    { "name": "Utilisateurs", "description": "Inscription et connexion" },
    { "name": "Produits", "description": "CRUD Produits (routes protégées)" }
  ],
  "paths": {
    "/api/users/register": {
      "post": {
        "tags": ["Utilisateurs"],
        "summary": "Inscription d’un utilisateur",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RegisterInput" },
              "examples": {
                "default": {
                  "value": { "username": "alice", "password": "secret123" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utilisateur créé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/RegisterResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "409": { "description": "Nom d’utilisateur déjà pris" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "tags": ["Utilisateurs"],
        "summary": "Connexion (JWT)",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginInput" },
              "examples": {
                "default": {
                  "value": { "username": "alice", "password": "secret123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentification réussie",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthLoginResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "description": "Identifiants invalides" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },

    "/api/product": {
      "get": {
        "tags": ["Produits"],
        "summary": "Lister les produits de l’utilisateur connecté",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Liste des produits",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Product" }
                }
              }
            }
          },
          "401": { "description": "Non authentifié" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "post": {
        "tags": ["Produits"],
        "summary": "Créer un produit",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductCreate" },
              "examples": {
                "default": {
                  "value": {
                    "name": "AC1 Phone1",
                    "type": "phone",
                    "price": 200.05,
                    "rating": 3.8,
                    "warranty_years": 1,
                    "available": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produit créé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProductCreatedResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "description": "Non authentifié" },
          "409": { "description": "Produit déjà existant (même nom pour cet utilisateur)" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },

    "/api/product/{id}": {
      "get": {
        "tags": ["Produits"],
        "summary": "Obtenir un produit par ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID du produit"
          }
        ],
        "responses": {
          "200": {
            "description": "Produit trouvé",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Product" }
              }
            }
          },
          "401": { "description": "Non authentifié" },
          "404": { "description": "Produit non trouvé" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "patch": {
        "tags": ["Produits"],
        "summary": "Modifier un produit",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID du produit"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductUpdate" },
              "examples": {
                "default": {
                  "value": {
                    "price": 149.99,
                    "available": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produit modifié",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProductCreatedResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "description": "Non authentifié" },
          "404": { "description": "Produit non trouvé" },
          "409": { "description": "Conflit d’unicité (nom déjà utilisé)" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      },
      "delete": {
        "tags": ["Produits"],
        "summary": "Supprimer un produit",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID du produit"
          }
        ],
        "responses": {
          "200": {
            "description": "Produit supprimé",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Produit supprimé" }
                  }
                }
              }
            }
          },
          "401": { "description": "Non authentifié" },
          "404": { "description": "Produit non trouvé" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Mettre le token renvoyé par /api/users/login (sans guillemets)."
      }
    },

    "responses": {
      "BadRequest": {
        "description": "Requête invalide",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" },
            "examples": {
              "missingFields": { "value": { "message": "Données manquantes" } }
            }
          }
        }
      },
      "ServerError": {
        "description": "Erreur serveur",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/Error" },
            "examples": {
              "default": { "value": { "message": "Erreur serveur" } }
            }
          }
        }
      }
    },

    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": { "type": "string" }
        }
      },

      "UserPublic": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "66f1c5b1e8e3a4a9b6a1d234" },
          "username": { "type": "string", "example": "alice" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },

      "RegisterInput": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string", "minLength": 3, "maxLength": 30 },
          "password": { "type": "string", "minLength": 6 }
        }
      },
      "RegisterResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "username": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },

      "LoginInput": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "AuthLoginResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "_id": { "type": "string" },
              "username": { "type": "string" }
            }
          },
          "token": { "type": "string" }
        },
        "example": {
          "user": { "_id": "66f1c5b1e8e3a4a9b6a1d234", "username": "alice" },
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      },

      "Product": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "66f1c5b1e8e3a4a9b6a1d234" },
          "name": { "type": "string", "example": "AC1 Phone1" },
          "type": { "type": "string", "example": "phone" },
          "price": { "type": "number", "format": "double", "example": 200.05 },
          "rating": { "type": "number", "format": "double", "example": 3.8 },
          "warranty_years": { "type": "integer", "example": 1 },
          "available": { "type": "boolean", "example": true },
          "createdby": { "type": "string", "example": "66f1c5b1e8e3a4a9b6a1d999" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "ProductCreate": {
        "type": "object",
        "required": ["name", "type", "price"],
        "properties": {
          "name": { "type": "string", "minLength": 2, "maxLength": 100 },
          "type": { "type": "string", "minLength": 1, "maxLength": 50 },
          "price": { "type": "number", "format": "double" },
          "rating": { "type": "number", "format": "double" },
          "warranty_years": { "type": "integer" },
          "available": { "type": "boolean" }
        }
      },
      "ProductUpdate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "price": { "type": "number", "format": "double" },
          "rating": { "type": "number", "format": "double" },
          "warranty_years": { "type": "integer" },
          "available": { "type": "boolean" }
        }
      },
      "ProductCreatedResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "66f1c5b1e8e3a4a9b6a1d234" },
          "name": { "type": "string" },
          "type": { "type": "string" },
          "price": { "type": "number", "format": "double" },
          "rating": { "type": "number", "format": "double" },
          "warranty_years": { "type": "integer" },
          "available": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  }
}
