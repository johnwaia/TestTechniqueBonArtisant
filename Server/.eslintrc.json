{
  "root": true,
  "env": { "node": true, "es2021": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 2021, "sourceType": "module" },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "eqeqeq": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/tests/**/*.js"],
      "env": { "jest": true, "node": true }
    }
  ]
}
